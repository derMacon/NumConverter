                           <tooltip>
                              <Tooltip text="Target base for the output" />
                           </tooltip>
                           <padding>
                              <Insets right="8.0" />
                           </padding>
                           <GridPane.margin>
                              <Insets left="8.0" right="8.0" />
                           </GridPane.margin>
                        </JFXComboBox>
                        <JFXTextField fx:id="txtFldInput" onKeyPressed="#calc" promptText="Input" GridPane.rowIndex="1">
