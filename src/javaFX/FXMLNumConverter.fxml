<AnchorPane maxHeight="500.0" prefHeight="468.0" prefWidth="315.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="javaFX.FXMLNumConverterController">
