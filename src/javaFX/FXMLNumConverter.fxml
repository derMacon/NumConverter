                           <GridPane.margin>
                              <Insets left="3.0" />
                           </GridPane.margin>
                        </JFXTextField>
                        <JFXTextField fx:id="txtFldBlock" depthTest="ENABLE" maxWidth="193.0" minWidth="77.0" prefHeight="31.0" prefWidth="77.0" promptText="Blocksize" GridPane.columnIndex="1" GridPane.rowIndex="1">
